datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model Compte {
  id        Int        @id @default(autoincrement())
  fullName  String
  email     String     @unique
  phone     String?
  country   String?
  Password  String
  role      Role       @default(CLIENT)
  createdAt DateTime   @default(now())
  commandes Commande[]
}

enum Role {
  ADMIN
  CLIENT
  FARMER
  DELIVERY
}

model Commande {
  id        Int      @id @default(autoincrement())
  emballage String
  adresse   String
  quantite  Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  compte    Compte   @relation(fields: [compteId], references: [id])
  compteId  Int
  status    Boolean?
  Date      DateTime @default(now())
}

model Product {
  id        Int    @id @default(autoincrement())
  title     String @default("")
  desc      String @default("")
  prix      Float  @default(0)
  emballage String @default("")
  farmId    Int? // Optional if some products are not linked to a farm
  image     String @default("") // âœ… New field for the image path or URL

  commandes Commande[] // ðŸ‘ˆ relation
  Date      DateTime   @default(now())
}
